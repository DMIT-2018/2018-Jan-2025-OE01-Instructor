@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="_isDarkMode" Theme="DMITTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="1">
        <MudStaticNavDrawerToggle DrawerId="nav-drawer" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
        <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
        <MudSpacer />
        <MudIconButton Icon="@(_isDarkMode ? @DMITIcons.lightMode: DMITIcons.darkMode)"
                       Color="Color.Warning"
                       OnClick="ToggleDarkMode"/>
    </MudAppBar>
    <MudDrawer id="nav-drawer" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = true;

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
        StateHasChanged();
    }

    MudTheme DMITTheme = new() 
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#6290C3",
            Secondary = "#C2E7DA",
            AppbarBackground = "#1A1B41",
            Tertiary = "#BAFF29",
            Background = "#F1FFE7",
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#8F3985",
            Secondary = "#07BEB8",
            AppbarBackground = "#25283D",
            Tertiary = "#98DFEA",
            Background = "#25283D",
        
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Comic Neue", "Helvetica", "Arial", "sans-serif" }
            }
        }
    };
}



@page "/SamplePages/MudStepper"

<MudStepper OnPreviewInteraction="NavigateStepAsync"
            ShowResetButton="true">
    <CompletedContent>
        <MudText><strong>First Name: </strong>@firstName</MudText>
        <MudText><strong>Last Name: </strong>@lastName</MudText>
        <MudText><strong>Email: </strong>@email</MudText>
        <MudText><strong>Phone Number: </strong>@phoneNumber</MudText>
    </CompletedContent>
    <ChildContent>
        <MudStep Title="First Step" CompletedStepColor="Color.Tertiary">
            <MudStack Spacing="2">
                <MudText Typo="Typo.h6">First Step</MudText>
                <MudTextField @bind-Value="firstName"
                              Label="First Name"
                              Variant="Variant.Outlined" />
                <MudTextField @bind-Value="lastName"
                              Label="Last Name"
                              Variant="Variant.Outlined" />
            </MudStack>
        </MudStep>
        <MudStep Title="Second Step" CompletedStepColor="Color.Tertiary">
            <MudStack Spacing="2">
                <MudText Typo="Typo.h6">Second Step</MudText>
                <MudTextField @bind-Value="email"
                              Label="Email"
                              Variant="Variant.Outlined" />
                <MudTextField @bind-Value="phoneNumber"
                              Label="Phone Number"
                              Variant="Variant.Outlined" />
            </MudStack>
        </MudStep>
    </ChildContent>
</MudStepper>

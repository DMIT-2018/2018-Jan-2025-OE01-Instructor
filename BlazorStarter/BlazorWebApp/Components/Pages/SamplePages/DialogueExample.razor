@page "/SamplePages/Dialogues"

<MudText Typo="Typo.h3">Dialogue Example</MudText>

<MudStack Row Justify="Justify.SpaceEvenly" AlignItems="AlignItems.Center">
    <MudTextField Label="Button Text"
                  Variant="Variant.Outlined"
                  @bind-Value="buttonText" />
    <MudSelect @bind-Value="buttonColor"
               Variant="Variant.Outlined">
        @foreach (Color? color in Enum.GetValues(typeof(Color)))
        {
            <MudSelectItem T="Color?" Value="@color">@color.ToString()</MudSelectItem>
        }
    </MudSelect>
    <MudButton Variant="Variant.Filled"
               OnClick="CustomDialogue"
               Color="Color.Primary">
        Open Dialogue
    </MudButton>
</MudStack>
@if (!string.IsNullOrWhiteSpace(feedbackText))
{
    <MudText Typo="Typo.h6">@feedbackText</MudText>
}
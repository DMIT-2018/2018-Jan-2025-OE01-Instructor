@page "/SamplePages/FileExample"

<PageTitle>File Example</PageTitle>

<MudText Typo="Typo.h3">File Upload and JavaScript Example</MudText>

<MudFileUpload Accept=".png, .jpg"
               MaximumFileCount="1"
               @bind-Files="browserFile"
               OnFilesChanged="UploadFileChange">
    <ActivatorContent>
        <MudIconButton HtmlTag="label"
                       Color="Color.Primary"
                       Variant="Variant.Filled"
                       Icon="@Icons.Material.Filled.PhotoCamera"
                       for="@browserFile">
        </MudIconButton>
    </ActivatorContent>           
</MudFileUpload>

<MudText Typo="Typo.h6">File Width: @dimensions.Width </MudText>
<MudText Typo="Typo.h6">File Height: @dimensions.Height </MudText>
<MudText Typo="Typo.h6">Users TimeZone: @timezone </MudText>